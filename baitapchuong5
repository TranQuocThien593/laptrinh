total = 0
count = 0

while True:
    s = input("Enter a number: ")
    if s == "done":
        break
    try:
        num = float(s)
        total += num
        count += 1
    except:
        print("Invalid input")

if count > 0:
    print(total, count, total / count)
else:
    print("No valid numbers entered")
